  <header>
    <div class="logo">
      <a href="/">
        <%= image_tag('chinese-logo.png', alt: 'logo') %>
        <span>ticketyboo</span>
      </a>
    </div>
  
    <input type="checkbox" class="nav-toggle" id="nav-toggle">
  
    <ul class="links-container">
      <% if current_user %>
        <li><%= link_to 'Popular Questions', posts_path %></li>
        <li><%= link_to 'Your Tickets', tickets_path %></li>
        <li><%= link_to 'New Ticket', new_ticket_path %></li>
      <% else %>
        <li><a href="#">About</a></li>
        <li><a href="#">Features</a></li>
        <li><a href="#">Team</a></li>
      <% end %>
    </ul>
  
    <ul class="action-container">
      <% if user_signed_in? %>
        <li>
          <%= link_to edit_user_registration_path do %>
            <div class="avatar-circle">
              <%= user_avatar(current_user) %>
            </div>
          <% end %>
        </li>
        <li><%= link_to 'Log Out', destroy_user_session_path, method: 'delete' %></li>
      <% else %>
        <li><%= link_to 'Sign In', new_user_session_path %></li>
        <li><%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-pink'%></li>
      <% end %>
    </ul>
  
    <label for="nav-toggle" class="nav-toggle-label">
      <svg viewBox="0 0 15.26 8.9"><defs><style>.cls-1{fill:none;stroke:#5b5a6a;stroke-miterlimit:10;}</style></defs><line class="cls-1" y1="0.5" x2="15.26" y2="0.5"/><line class="cls-1" y1="4.31" x2="15.26" y2="4.31"/><line class="cls-1" y1="8.4" x2="15.26" y2="8.4"/></svg>
    </label>
  
  </header>
</div>