<div class="nested-fields" class="topic-form">
  <%= form.hidden_field :_destroy %>
  <%= form.text_field :name, list: "topics_autocomplete", placeholder: 'Topic name', class: 'topic-field' %>
  <datalist id="topics_autocomplete" >
    <% Topic.all.distinct.each do |topic| %>
      <option value="<%= topic.name %>"></option>
    <% end %>
  </datalist>
  <div class="topic-remove">
    <%= link_to "#", data: { action: "click->nested-form#remove_association" } do %>
      <i class="fas fa-eraser"></i>
    <% end %>
  </div>
</div>