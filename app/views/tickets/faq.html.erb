<main class="ticket-public">
  <section class="search">
    <%= form_tag(faq_tickets_path, method: :get, class: 'search-form') do %>
      <%= text_field_tag :query, params[:query], placeholder: 'Search ...' %>
      <%= submit_tag '', style: "display: none;" %>
    <% end %>
  </section>
  <section class="ticket-list">
    <% @tickets.each do |ticket| %>
      <div>
        <div class="ticket-list__time">
          <%= date_creation_time(ticket) %>
        </div>
        <div class="ticket-list__preview">
          <h4><%= link_to ticket.title, public_show_ticket_path(ticket) %></h4>
          <div class="ticket-show__topics">
            <%= render ticket.topics || '' %>
          </div>
        </div>
      </div>
    <% end %>
  </section>
  <section class="pagination">
    <%= paginate @tickets %>
  </section>
</main>